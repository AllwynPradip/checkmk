import argparse
import os
import sys
import time
from pathlib import Path


def parse_arguments() -> argparse.Namespace:
    parser = argparse.ArgumentParser(
        description=__doc__,
        formatter_class=argparse.RawTextHelpFormatter,
    )
    parser.add_argument("host_name")
    return parser.parse_args()


def main() -> int:
    args = parse_arguments()
    folder = Path(
        os.environ["OMD_ROOT"],
        f"tmp/check_mk/otel_collector/{args.host_name}",
    )

    file_paths = list(folder.iterdir())
    time.sleep(1)  # let the control

    content = []
    for file_path in file_paths:
        try:
            content.append(file_path.read_text())
        except FileNotFoundError:
            sys.stderr.write(f"No such file {file_path}\n")
        except IsADirectoryError:
            sys.stderr.write(f"Skip folder {file_path}\n")

    sys.stdout.write("<<<otel_metrics:sep(0)>>>\n")
    sys.stdout.write("\n".join(content) + "\n")
    return 0


if __name__ == "__main__":
    sys.exit(main())
