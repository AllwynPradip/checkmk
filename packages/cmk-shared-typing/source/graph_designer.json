{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "graph_designer_content",
    "properties": {
        "graph_lines": { "$ref": "#/$defs/graph_lines" },
        "i18n": { "$ref": "#/$defs/i18n" }
    },
    "required": ["graph_lines", "i18n"],
    "$defs": {
        "graph_line_id": { "type": "integer" },
        "graph_line_color": { "type": "string" },
        "graph_line_title": { "type": "string" },
        "graph_line_title_short": { "type": "string" },
        "graph_line_visible": { "type": "boolean" },
        "graph_line_line_type": {
            "type": "string",
            "enum": ["line", "area", "stack'"]
        },
        "graph_line_mirrored": { "type": "boolean" },
        "graph_line": {
            "type": "object",
            "properties": {
                "id": { "$ref": "#/$defs/graph_line_id" },
                "color": { "$ref": "#/$defs/graph_line_color" },
                "title": { "$ref": "#/$defs/graph_line_title" },
                "title_short": {
                    "$ref": "#/$defs/graph_line_title_short"
                },
                "visible": { "$ref": "#/$defs/graph_line_visible" },
                "line_type": {
                    "$ref": "#/$defs/graph_line_line_type"
                },
                "mirrored": { "$ref": "#/$defs/graph_line_mirrored" }
            },
            "required": [
                "id",
                "color",
                "title",
                "title_short",
                "visible",
                "line_type",
                "mirrored"
            ]
        },
        "graph_lines": {
            "type": "array",
            "items": [{ "$ref": "#/$defs/graph_line" }]
        },
        "i18n_graph_lines": {
            "type": "object",
            "properties": {
                "actions": { "type": "string" },
                "color": { "type": "string" },
                "title": { "type": "string" },
                "visible": { "type": "string" },
                "line_style": { "type": "string" },
                "line": { "type": "string" },
                "area": { "type": "string" },
                "stack": { "type": "string" },
                "mirrored": { "type": "string" },
                "formula": { "type": "string" },
                "dissolve_operation": { "type": "string" },
                "clone_this_entry": { "type": "string" },
                "move_this_entry": { "type": "string" },
                "delete_this_entry": { "type": "string" },
                "add": { "type": "string" }
            },
            "required": [
                "actions",
                "color",
                "title",
                "visible",
                "line_style",
                "line",
                "area",
                "stack",
                "mirrored",
                "formula",
                "dissolve_operation",
                "clone_this_entry",
                "move_this_entry",
                "delete_this_entry",
                "add"
            ]
        },
        "i18n_graph_operations": {
            "type": "object",
            "properties": {
                "sum": { "type": "string" },
                "product": { "type": "string" },
                "difference": { "type": "string" },
                "fraction": { "type": "string" },
                "average": { "type": "string" },
                "minimum": { "type": "string" },
                "maximum": { "type": "string" },
                "no_selected_graph_lines": { "type": "string" },
                "percentile": { "type": "string" },
                "apply": { "type": "string" },
                "no_selected_graph_line": { "type": "string" }
            },
            "required": [
                "sum",
                "product",
                "difference",
                "fraction",
                "average",
                "minimum",
                "maximum",
                "no_selected_graph_lines",
                "percentile",
                "apply",
                "no_selected_graph_line"
            ]
        },
        "i18n_graph_options": {
            "type": "object",
            "properties": {
                "unit_first_with_unit": { "type": "string" },
                "unit_custom": { "type": "string" },
                "unit_custom_notation": { "type": "string" },
                "unit_custom_notation_symbol": { "type": "string" },
                "unit_custom_notation_decimal": { "type": "string" },
                "unit_custom_notation_si": { "type": "string" },
                "unit_custom_notation_iec": { "type": "string" },
                "unit_custom_notation_standard_scientific": {
                    "type": "string"
                },
                "unit_custom_notation_engineering_scientific": {
                    "type": "string"
                },
                "unit_custom_notation_time": { "type": "string" },
                "unit_custom_precision": { "type": "string" },
                "unit_custom_precision_rounding_mode": { "type": "string" },
                "unit_custom_precision_rounding_mode_auto": {
                    "type": "string"
                },
                "unit_custom_precision_rounding_mode_strict": {
                    "type": "string"
                },
                "unit_custom_precision_digits": { "type": "string" },
                "vertical_range_auto": { "type": "string" },
                "vertical_range_explicit": { "type": "string" },
                "vertical_range_explicit_lower": { "type": "string" },
                "vertical_range_explicit_upper": { "type": "string" }
            },
            "required": [
                "unit_first_with_unit",
                "unit_custom",
                "unit_custom_notation",
                "unit_custom_notation_symbol",
                "unit_custom_notation_decimal",
                "unit_custom_notation_si",
                "unit_custom_notation_iec",
                "unit_custom_notation_standard_scientific",
                "unit_custom_notation_engineering_scientific",
                "unit_custom_notation_time",
                "unit_custom_precision",
                "unit_custom_precision_rounding_mode",
                "unit_custom_precision_rounding_mode_auto",
                "unit_custom_precision_rounding_mode_strict",
                "unit_custom_precision_digits",
                "vertical_range_auto",
                "vertical_range_explicit",
                "vertical_range_explicit_lower",
                "vertical_range_explicit_upper"
            ]
        },
        "i18n_topics": {
            "type": "object",
            "properties": {
                "metric": { "type": "string" },
                "scalar": { "type": "string" },
                "constant": { "type": "string" },
                "graph_lines": { "type": "string" },
                "operations": { "type": "string" },
                "transformation": { "type": "string" },
                "graph_operations": { "type": "string" },
                "unit": { "type": "string" },
                "vertical_range": { "type": "string" },
                "metrics_with_zero_values": { "type": "string" },
                "graph_options": { "type": "string" }
            },
            "required": [
                "metric",
                "scalar",
                "constant",
                "graph_lines",
                "operations",
                "transformation",
                "graph_operations",
                "unit",
                "vertical_range",
                "metrics_with_zero_values",
                "graph_options"
            ]
        },
        "i18n": {
            "type": "object",
            "properties": {
                "graph_lines": { "$ref": "#/$defs/i18n_graph_lines" },
                "graph_operations": { "$ref": "#/$defs/i18n_graph_operations" },
                "graph_options": { "$ref": "#/$defs/i18n_graph_options" },
                "topics": { "$ref": "#/$defs/i18n_topics" }
            },
            "required": [
                "graph_lines",
                "graph_operations",
                "graph_options",
                "topics"
            ]
        }
    }
}
