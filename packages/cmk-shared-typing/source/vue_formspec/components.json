{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "form_spec": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "help": {
                    "type": "string"
                },
                "validators": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "validators.json#/$defs/validator"
                    },
                    "default": []
                }
            },
            "required": [
                "type",
                "title",
                "help",
                "validators"
            ]
        },
        "integer": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "integer",
                    "default": "integer"
                },
                "label": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                },
                "input_hint": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "float": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "float",
                    "default": "float"
                },
                "label": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                },
                "input_hint": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "legacy_valuespec": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "legacy_valuespec",
                    "default": "legacy_valuespec"
                },
                "input_html": {
                    "type": "string"
                },
                "readonly_html": {
                    "type": "string"
                },
                "varprefix": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "html",
                "varprefix"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "string": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "string",
                    "default": "string"
                },
                "placeholder": {
                    "type": "string"
                },
                "input_hint": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "list": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "list",
                    "default": "list"
                },
                "element_template": {
                    "$ref": "#/$defs/form_spec"
                },
                "element_default_value": {},
                "editable_order": {
                    "type": "boolean"
                },
                "add_element_label": {
                    "type": "string"
                },
                "remove_element_label": {
                    "type": "string"
                },
                "no_element_label": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "element_template",
                "element_default_value",
                "editable_order",
                "add_element_label",
                "remove_element_label",
                "no_element_label"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "dictionary_group": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "help": {
                    "type": "string"
                }
            },
            "required": [
                "key",
                "title"
            ]
        },
        "dictionary_element": {
            "type": "object",
            "properties": {
                "ident": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                },
                "group": {
                    "$ref": "#/$defs/dictionary_group"
                },
                "default_value": {},
                "parameter_form": {
                    "$ref": "#/$defs/form_spec"
                }
            },
            "required": [
                "ident",
                "required",
                "parameter_form",
                "default_value"
            ]
        },
        "dictionary": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "dictionary",
                    "default": "dictionary"
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/dictionary_element"
                    },
                    "default": []
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/dictionary_group"
                    }
                },
                "no_elements_text": {
                    "type": "string"
                },
                "additional_static_elements": {
                    "type": "object"
                },
                "layout": {
                    "enum": ["default", "two_columns"],
                    "default": "default"
                }
            },
            "required": [
                "type",
                "elements",
                "static_elements_key",
                "groups",
                "layout"

            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "single_choice_element": {
            "type": "object",
            "properties": {
                "name": {},
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "title"
            ]
        },
        "single_choice": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "single_choice",
                    "default": "single_choice"
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/single_choice_element"
                    },
                    "default": []
                },
                "no_elements_text": {
                    "type": "string"
                },
                "frozen": {
                    "type": "boolean"
                },
                "label": {
                    "type": "string"
                },
                "input_hint": {}
            },
            "required": [
                "type",
                "frozen",
                "elements",
                "input_hint"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "multiple_choice_element": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "title"
            ]
        },
        "multiple_choice": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "multiple_choice",
                    "default": "multiple_choice"
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/multiple_choice_element"
                    },
                    "default": []
                },
                "show_toggle_all": {
                    "type": "boolean",
                    "default": false
                }
            },
            "required": [
                "type",
                "elements",
                "show_toggle_all"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "cascading_single_choice_element": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "default_value": {},
                "parameter_form": {
                    "$ref": "#/$defs/form_spec"
                }
            },
            "required": [
                "name",
                "title",
                "default_value",
                "parameter_form"
            ]
        },
        "cascading_single_choice": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "cascading_single_choice",
                    "default": "cascading_single_choice"
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/cascading_single_choice_element"
                    },
                    "default": []
                },
                "no_elements_text": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "input_hint": {},
                "layout": {
                    "enum": ["default", "horizontal"],
                    "default": "default"
                }
            },
            "required": [
                "type",
                "elements",
                "input_hint",
                "layout"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "fixed_value": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "fixed_value",
                    "default": "fixed_value"
                },
                "label": {
                    "type": "string"
                },
                "value": {}
            },
            "required": [
                "type",
                "value"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "boolean_choice": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "boolean_choice",
                    "default": "boolean_choice"
                },
                "label": {
                    "type": "string"
                },
                "text_on": {
                    "type": "string"
                },
                "text_off": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "text_on",
                "text_off"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "multiline_text": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "multiline_text",
                    "default": "multiline_text"
                },
                "label": {
                    "type": "string"
                },
                "macro_support": {
                    "type": "boolean"
                },
                "monospaced": {
                    "type": "boolean"
                },
                "input_hint": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "data_size": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "data_size",
                    "default": "data_size"
                },
                "label": {
                    "type": "string"
                },
                "displayed_magnitudes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "input_hint": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "displayed_magnitudes"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "topic": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "dictionary": {
                    "$ref": "#/$defs/dictionary"
                }
            },
            "required": [
                "key",
                "title",
                "dictionary"
            ]
        },
        "catalog": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "catalog",
                    "default": "catalog"
                },
                "topics": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/topic"
                    }
                }
            },
            "required": [
                "type",
                "topics"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/form_spec"
                }
            ]
        },
        "components": {
            "discriminator": {
                "propertyName": "type"
            },
            "oneOf": [
                {
                    "$ref": "#/$defs/integer"
                },
                {
                    "$ref": "#/$defs/float"
                },
                {
                    "$ref": "#/$defs/string"
                },
                {
                    "$ref": "#/$defs/dictionary"
                },
                {
                    "$ref": "#/$defs/list"
                },
                {
                    "$ref": "#/$defs/legacy_valuespec"
                },
                {
                    "$ref": "#/$defs/single_choice"
                },
                {
                    "$ref": "#/$defs/cascading_single_choice"
                },
                {
                    "$ref": "#/$defs/fixed_value"
                },
                {
                    "$ref": "#/$defs/boolean_choice"
                },
                {
                    "$ref": "#/$defs/multiline_text"
                },
                {
                    "$ref": "#/$defs/data_size"
                },
                {
                    "$ref": "#/$defs/catalog"
                },
                {
                    "$ref": "#/$defs/multiple_choice"
                }
            ],
            "required": [
                "type"
            ]
        }
    }
}
