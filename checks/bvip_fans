# autogenerated, might not even be needed:
# mypy: disable-error-code="var-annotated,name-defined,arg-type,no-untyped-def,list-item,index,attr-defined,operator,assignment"

from cmk.base.check_api import OID_END
from cmk.base.check_legacy_includes.fan import check_fan
from cmk.base.config import check_info
from cmk.base.plugins.agent_based.utils.bvip import DETECT_BVIP


def inventory_bvip_fans(info):
    for line in info:
        rpm = int(line[1])
        if rpm != 0:
            yield line[0], {"lower": (rpm * 0.9, rpm * 0.8)}


def check_bvip_fans(item, params, info):
    for nr, value in info:
        if nr == item:
            rpm = int(value)
            return check_fan(rpm, params)
    return None


check_info["bvip_fans"] = {
    "detect": DETECT_BVIP,
    "check_function": check_bvip_fans,
    "inventory_function": inventory_bvip_fans,
    "service_description": "Fan %s",
    "snmp_info": (".1.3.6.1.4.1.3967.1.1.8.1", [OID_END, 1]),
    "group": "hw_fans",
}
