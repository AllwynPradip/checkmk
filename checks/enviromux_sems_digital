from collections.abc import Mapping
from typing import Any

# NOTE: Careful when replacing the *-import below with a more specific import. This can cause
# problems because it might remove variables needed for accessing discovery rulesets.
from cmk.base.check_legacy_includes.enviromux import (
    ENVIROMUX_CHECK_DEFAULT_PARAMETERS,
    enviromux_sems_scan_function,
    EnviromuxDigitalSection,
    parse_enviromux_digital,
)

factory_settings["enviromux_default_levels"] = ENVIROMUX_CHECK_DEFAULT_PARAMETERS


def inventory_enviromux_sems_digital(section: EnviromuxDigitalSection):
    for item in section:
        yield item, {}


def check_enviromux_sems_digital(
    item: str,
    params: Mapping[str, Any],
    section: EnviromuxDigitalSection,
):
    if (sensor := section.get(item)) is None:
        return

    if sensor.value == "Unknown":
        yield 3, "Sensor value is unknown"
        return
    if sensor.value == sensor.normal_value:
        yield 0, f"Sensor Value is normal: {sensor.value}"
        return

    yield 2, f"Sensor Value is not normal: {sensor.value} . It should be: {sensor.normal_value}"


check_info["enviromux_sems_digital"] = {
    "parse_function": parse_enviromux_digital,
    "inventory_function": inventory_enviromux_sems_digital,
    "check_function": check_enviromux_sems_digital,
    "service_description": "Digital Sensor: %s",
    "snmp_info": (
        ".1.3.6.1.4.1.3699.1.1.2.1.6.1.1",
        [
            "1",  # digIntputIndex
            "2",  # digIntputDescription
            "5",  # digIntputValue
            "6",  # digIntputNormalValue
        ],
    ),
    "has_perfdata": True,
    "snmp_scan_function": enviromux_sems_scan_function,
    "group": "temperature",
}
